<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:background="@drawable/card"
              android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/playlist_icon"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher"
            android:layout_marginBottom="5dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/share_layout"
            android:layout_marginRight="6dp"
            />

        <LinearLayout
            android:id="@+id/share_layout"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignTop="@+id/playlist_icon"
            android:layout_alignBottom="@+id/playlist_icon"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:id="@+id/icon_favorite"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@android:drawable/btn_star_big_off"
                />

            <ImageView
                android:id="@+id/icon_share_facebook"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_share"
                />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Summer days"
        android:textSize="16dp"
        android:singleLine="true"
        android:textStyle="bold"/>

    <RatingBar
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:rating="4"
        android:layout_marginBottom="5dp"
        android:progressDrawable="@android:drawable/btn_star"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:singleLine="true"
        android:textStyle="italic"
        android:text="Best of August 2014"/>

</LinearLayout>
